#include <stdio.h>

/* Funcao recursiva pra mover a Torre pra cima */
void moverTorre(int casas) {
    if (casas <= 0) return;
    printf("Cima\n");
    moverTorre(casas - 1);
}
/* Funcao recursiva pra mover o Bispo na diagonal */
void moverBispo(int vertical, int horizontal) {
    if (vertical <= 0 || horizontal <= 0) return;
    for (int i = 0; i < vertical; i++) { // Loop externo pra mover pra cima
        printf("Cima\n");

        for (int j = 0; j < horizontal; j++) { // Loop interno pra mover pra direita
            printf("Direita\n");
        }
    }
    moverBispo(vertical - 1, horizontal - 1);
}
/* Funcao recursiva pra mover a Rainha pra baixo e pra direita */
void moverRainha(int baixo, int direita) {
    if (baixo <= 0 && direita <= 0) return;
    if (baixo > 0) {
        printf("Baixo\n");
        moverRainha(baixo - 1, direita);
    }
    if (direita > 0) {
        printf("Direita\n");
        moverRainha(baixo, direita - 1);
    }
}

/* Funcao pra mover o Cavalo pra cima 2 e pra direita 1 */
void moverCavalo()
{
    int cima = 0;
    int direita = 0;

    for (int i = 0; i < 5; i++) { // Loop pra mover pra cima
        if (cima >= 2) break;
        printf("Cima\n");
        cima++;
        if (cima < 2) continue;
    }
    for (int j = 0; j < 5; j++) { // Loop pra mover pra direita
        if (direita >= 1) break;
        printf("Direita\n");
        direita++;
    }
}
int main(){
    int torre = 3;
    int bispoVertical = 2;
    int bispoHorizontal = 2;
    int rainhaBaixo = 2;
    int rainhaDireita = 2;

    printf("Movimento da Torre:\n");
    moverTorre(torre);
    printf("\n");

    printf("Movimento do Bispo:\n");
    moverBispo(bispoVertical, bispoHorizontal);
    printf("\n");

    printf("Movimento da Rainha:\n");
    moverRainha(rainhaBaixo, rainhaDireita);
    printf("\n");

    printf("Movimento do Cavalo:\n");
    moverCavalo();

    return 0;
}
